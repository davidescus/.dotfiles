{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro Flat",
  "editor.fontFamily": "'Source Code Pro'",
  "editor.fontSize": 16,
  "editor.lineHeight": 24,
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.minimap.enabled": false,
  "editor.hover.enabled": false,
  "editor.matchBrackets": "never",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "git.confirmSync": false,
  "scm.diffDecorations": "all",
  "scm.diffDecorationsGutterVisibility": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "window.zoomLevel": 0,
  "editor.codeLens": false,
  "editor.links": false,
  "editor.lightbulb.enabled": "off",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "editor.wordWrap": "on",
  // "editor.lineNumbers": "relative",
  "editor.suggestOnTriggerCharacters": false, // automatic sugggestions - ctrl+space
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "zenMode.centerLayout": false, // in zen mode remove left/right spaces between editor and pannels
  "editor.wordBasedSuggestions": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.renderLineHighlight": "none",
  "files.autoSave": "afterDelay",
  "breadcrumbs.enabled": false,
  "extensions.ignoreRecommendations": true,
  // "editor.lineNumbers": "off", // disable line numbers

  "macros": {
    "toggleActivityBarWithFocus": [
      "workbench.action.focusActivityBar",
      "workbench.action.toggleActivityBarVisibility"
    ]
  },

  // go
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "go.formatTool": "gofmt",

