[
  // panels
  {
    "key": "alt+1",
    "command": "workbench.action.focusSideBar",
    "when": "!sideBarFocus"
  },
  {
    "key": "alt+1",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarFocus"
  },
  {
    "key": "alt+2",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "alt+3",
    "command": "workbench.action.focusAuxiliaryBar",
    "when": "!auxiliaryBarFocus"
  },
  {
    "key": "alt+3",
    "command": "workbench.action.toggleAuxiliaryBar",
    "when": "auxiliaryBarFocus"
  },
  {
    "key": "alt+4",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "alt+5",
    "command": "macros.toggleActivityBarWithFocus"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.nextEditorInGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.previousEditorInGroup",
    "when": "editorTextFocus"
  },

  // selections
  {
    "key": "ctrl+w",
    "command": "editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+w",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },

  // coding
  {
    "key": "ctrl+q",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+c a", // code actions
    "command": "editor.action.codeAction",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+c r", // rename
    "command": "editor.action.rename",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+g d", // go to definition
    "command": "editor.action.revealDefinition",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+g d", // peek definition
    "command": "editor.action.peekDefinition",
    "when": "editorTextFocus"
  },

  {
    "key": "ctrl+g r", // peek references
    "command": "editor.action.referenceSearch.trigger",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+left", // go back to previous location
    "command": "workbench.action.navigateBack",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+right", // go forward to next location
    "command": "workbench.action.navigateForward",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+f", // find in files
    "command": "workbench.action.findInFiles",
    "when": "editorTextFocus || !inputFocus"
  },
  {
    "key": "ctrl+f4",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus || !inputFocus"
  },

  // explorer
  {
    "key": "ctrl+r", // explorer rename file
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+c", // explorer copy file
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+x", // explorer cut file
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+v", // explorer paste file
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+d", // explorer delete file
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+a", // explorer create file
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+shift+a", // explorer create folder
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "capslock",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "capslock",
    "command": "closeFindWidget",
    "when": "editorFocus && findWidgetVisible"
  },
  {
    "key": "capslock",
    "command": "closeReferenceSearch",
    "when": "referenceSearchVisible"
  },
  {
    "key": "capslock",
    "command": "cancelSelection",
    "when": "editorHasSelection && !inQuickOpen && !findWidgetVisible"
  },
  {
    "key": "capslock",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible"
  },
  {
    "key": "capslock",
    "command": "hideSuggestWidget",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+c", // if no selection, copy current line
    "command": "editor.action.clipboardCopyAction",
    "when": "editorTextFocus && !editorHasSelection"
  },

  // debugging
  {
    "key": "shift+f10",
    "command": "-editor.action.showContextMenu",
    "when": "textInputFocus"
  },
  {
    "key": "shift+f10", // run without debugging
    "command": "workbench.action.debug.run"
  },
  {
    "key": "shift+f9",
    "command": "-settings.action.showContextMenu",
    "when": "inSettingsEditor"
  },
  {
    "key": "shift+f9", // run with debugging
    "command": "workbench.action.debug.start"
    // "when": "editorTextFocus"
  },
  {
    "key": "ctrl+f2", // stop debugging / running
    "command": "workbench.action.debug.stop"
  },
  {
    "key": "f9", // continue debugging
    "command": "workbench.action.debug.continue",
    "when": "inDebugMode"
  },
  {
    "key": "f8", // step over
    "command": "workbench.action.debug.stepOver",
    "when": "inDebugMode"
  },
  {
    "key": "f7", // step into
    "command": "workbench.action.debug.stepInto",
    "when": "inDebugMode"
  },
  {
    "key": "shift+f8", // step out
    "command": "workbench.action.debug.stepOut",
    "when": "inDebugMode"
  },
  {
    "key": "alt+f8", // evaluate
    "command": "workbench.action.debug.evaluate",
    "when": "inDebugMode"
  },
  {
    "key": "ctrl+f8", // toggle breakpoint
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "editorTextFocus"
  },

  // extensions
  {
    "key": "ctrl+b p",
    "command": "projectManager.listProjects"
  }
]
