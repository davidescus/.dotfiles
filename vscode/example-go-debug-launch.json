  "version": "0.2.0",
  "configurations": [
    {
      "type": "go",
      "request": "launch",
      "name": "Run Dev",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "ENV_NAME": "development",
        "DEBUG": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "go",
      "request": "launch",
      "name": "Run Prod",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "ENV_NAME": "production",
        "DEBUG": "false"
      },
      "console": "integratedTerminal"
    }
  ]
}
